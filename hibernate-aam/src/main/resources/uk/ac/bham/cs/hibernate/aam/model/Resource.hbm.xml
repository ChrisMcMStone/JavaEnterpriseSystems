<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="uk.ac.bham.cs.aam.model.impl.ResourceImpl" table="resource">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="assigned" />
        </id>
        <property name="version" type="java.lang.Integer">
            <column name="version" />
        </property>
        <property name="firstName" type="java.lang.String">
            <column name="firstname" />
        </property>
        <property name="lastName" type="java.lang.String">
            <column name="lastname" />
        </property>
        <property name="address" type="java.lang.String">
            <column name="address" />
        </property>
        <property name="email" type="java.lang.String">
            <column name="email" />
        </property>
        <!-- NEED TO CHANGE -->
        <set name="allocations" table="WORKALLOCATION" inverse="false" lazy="true">
            <key>
                <column name="allocation_id" />
            </key>
            <one-to-many class="uk.ac.bham.cs.aam.model.WorkAllocation" />
        </set>
        <many-to-one name="assetType" class="uk.ac.bham.cs.aam.model.AssetType" fetch="join">
            <column name="asset_type_id" />
        </many-to-one>
    </class>
</hibernate-mapping>
